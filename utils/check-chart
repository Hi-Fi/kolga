#!/usr/bin/env bash

set -e

# Change working directory to project root
cd "$(dirname "$0")/.."

DATE=$(date +"%Y-%m-%d_%H-%M-%S.800081Z")

helm lint ./helm
helm template --dry-run --set deployment.timestamp=$DATE --set application.initializeCommand=test --set application.migrateCommand=test --set application.pvc.enabled=true --set hpa.enabled=true ./helm
